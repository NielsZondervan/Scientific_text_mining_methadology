note = {16th IFAC Symposium on Information Control Problems in Manufacturing INCOM 2018},
issn = {2405-8963},
doi = {https://doi.org/10.1016/j.ifacol.2018.08.385},
url = {https://www.sciencedirect.com/science/article/pii/S2405896318315106},
author = {Jesus Gonzalez-Feliu and Carlos Peris-Pla},
keywords = {urban logistics, retailing land use, shopping trips, freight trips, decision support system},
abstract = {This paper proposes the methodology of a decision support system to estimate the impacts of retailing development on freight trip generation and shopping trip structure and composition. First, the methodological framework of the shopping trip chain estimation is proposed, i.e. generation, catchment distribution and distance estimation. Then, the proposed zonal freight trip generation model is described and a land use module based on attractiveness and accessibility indicators proposed. An application to the deployment of a set of new retailing poles in Lyon, France, is also presented. Results show that although freight trips remain residual at a global level, shopping trip increase of those three new zones have a non-negligible contribution to the overall traffic. Finally, practical implications and further developments are presented.}
}
@article{LIU2016720,
title = {Bi-objective optimization for the container terminal integrated planning},
journal = {Transportation Research Part B: Methodological},
volume = {93},
pages = {720-749},
year = {2016},
note = {Maritime Logistics},
issn = {0191-2615},
doi = {https://doi.org/10.1016/j.trb.2016.05.012},
url = {https://www.sciencedirect.com/science/article/pii/S0191261516302958},
author = {Ming Liu and Chung-Yee Lee and Zizhen Zhang and Chengbin Chu},
keywords = {Maritime logistics, Integrated planning, Bi-objective methods},
abstract = {In this paper, we study the joint optimization of the tactical berth allocation and the tactical yard allocation in container terminals, which typically consist of berth side and yard side operations. The studied two objectives are: (i) the minimization of the violation of the vessels’ expected turnaround time windows with the purpose of meeting the timetables published by shipping liners, and (ii) the minimization of the total yard transportation distance with the aim to lower terminal operational cost. We propose a bi-objective integer program which can comprehensively address the import, export and transshipment tasks in port daily practice. Traditionally, a container transshipment task is performed as a couple of import and export tasks, called indirect-transshipment mode, in which the transit container are needed to be temporally stored in the yard. As the way of transferring containers directly from the incoming vessel to the outgoing vessel, called direct-transshipment mode, has potential to save yard storage resources, the proposed model also incorporates both indirect- and direct-transshipment modes. To produce Pareto solutions efficiently, we devise heuristic approaches. Numerical experiments have been conducted to demonstrate the efficiency of the approaches.}
}
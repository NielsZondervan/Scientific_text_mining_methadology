author = {Gustavo Campos Menezes and Geraldo Robson Mateus and Martín Gómez Ravetti},
keywords = {(O) production, Integrated planning, Scheduling, Branch-and-price, Logistics},
abstract = {The integration of planning and scheduling decisions is of critical importance to guarantee an efficient operation and use of port terminal facilities. Our analysis takes into account a Brazilian bulk cargo terminal, recognized as one of the largest in the world. The problem is to define the amount and destination of each input or output order in a bulk cargo terminal, establishing a set of feasible routes to guarantee that products are stored and shipped on schedule, minimizing operational costs. A mathematical programming model solved through a column generation procedure and a branch-and-price algorithm is proposed and tested. Computational results show that the proposed approach is able to produce exact solutions for small- and medium-size instances but is compatible with real cases and that it offers strong bounds for large instances for which optimization packages are not able to provide solutions. The experiments show gaps varying from zero to 32.10%.}
}
@article{AVCI2016160,

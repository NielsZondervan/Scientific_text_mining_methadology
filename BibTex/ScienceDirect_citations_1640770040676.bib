abstract = {Speaker Verification (SV) system is the popularly used user’s identity authentication. From this perspective, Improved Encryption with Optimized Variable Size Windowing based SV (IE-OVSW-SV) system has been designed which authenticates the speaker’s identities based on watermarking and encrypting the optimal speech signal features. For encryption, an enhanced AES algorithm was combined with improved RC4 keystream generator to generate the AES key. But it has a high computational complexity and does not ensure the maximum security level due to the utilization of the same symmetric key for cryptography. Therefore, in this article, Chaotic-based Advanced Encryption Standard (CAES) is proposed in which simplified enhanced AES is proposed by removing few rounds of the permutation process to reduce its computational complexity and finally combined with an improved quadratic chaotic map encryption in addition to increase the security of encrypted speech signal features during communication. Further, Gaussian Mixture Models (GMM) classification is used for verifying the speaker’s identity. Finally, the experimental results show the performance efficiency of CAES compared to the enhanced AES algorithm.}
}
@article{WICAKSONO2021100660,
title = {Market potential of bicycle crowdshipping: A two-sided acceptance analysis},
journal = {Research in Transportation Business & Management},

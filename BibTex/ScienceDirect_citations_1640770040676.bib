journal = {Transportation Research Part D: Transport and Environment},
volume = {82},
pages = {102311},
year = {2020},
issn = {1361-9209},
doi = {https://doi.org/10.1016/j.trd.2020.102311},
url = {https://www.sciencedirect.com/science/article/pii/S1361920919309277},
author = {F.N. McLeod and T.J. Cherrett and T. Bektas and J. Allen and A. Martinez-Sykora and C. Lamas-Fernandez and O. Bates and K. Cheliotis and A. Friday and M. Piecyk and S. Wise},
keywords = {Parcel delivery, Sustainable transport, Last-mile logistics},
abstract = {Parcel carriers face increasingly difficult operating conditions in busy metropolitan areas due to growing consumer demand for ever faster delivery services and having to cope with traffic congestion and city authority measures that may restrict or penalise access for certain types of vehicle. This paper evaluates the potential environmental and financial benefits of switching from traditional van-based deliveries to an alternative operating model, where porters or cycle couriers undertake deliveries supported by a substantially reduced van fleet. Results using a specially-developed algorithm to model operations of a real carrier in an area of central London, UK, suggested that the carrier could reduce CO2 emissions by 45%, NOx emissions by 33%, driving distance by 78% and curbside parking time by 45%. Overall cost savings to the carrier were estimated to be in the range 34–39%. Scaling up the modelled emissions savings to London’s Central Activities Zone, an area of approximately 30 km2 and with current total annual parcel delivery distance of around 15 million km, could see annual emissions savings in the region of 2 million kg CO2 and 1633 kg NOx if all carriers utilised porters or cycle couriers. The key operating challenges identified were related to sorting and consolidating items by weight and volume, parcel handover arrangements and how to deal with express items and failed deliveries.}
}
@article{DUTTA2021,
title = {Organisational restructuring of Indian Railways},
journal = {Case Studies on Transport Policy},
year = {2021},
issn = {2213-624X},
doi = {https://doi.org/10.1016/j.cstp.2021.11.005},
url = {https://www.sciencedirect.com/science/article/pii/S2213624X21001802},
author = {Mridul Dutta},
keywords = {Operating ratio, Vertical separation, Intermodal logistics, Surface transport, Cross-subsidisation},
abstract = {Strategic drift of Indian Railways is due to the stagnant network capacity, declining freight share, project overrun, inefficient operating ratio, and, lack of autonomy. We propose two constructs to mitigate sectoral competition and augment investor credibility of IR for the period (2022–27). The first construct is a meta-competency framework in its strategic thinking of constituent skills. The second construct is the top-down empowerment by the government in collaborating freight segment of railways, highways, and the inland waterways for creating a strategic business unit under surface transport ministries. This study tests the hypotheses and discusses its implications of strategic drift, loss of freight share to road sector, ownership of monetisation of land rights & ancillary services by zonal railways, and, potential security & sabotage threats. Thus, this study expects to serve as a policy recommendation in creating an ecosystem for foreign direct investment and corporate restructuring of select subsidiaries of the Ministry of Railways in the four pillars of strategy architecture: Ease of doing business and transparency; Deregulation of capital expenditure investment; Cold supply chain capacity; Capitalize land rights and Right-of-Way. Hence, this IR strategic architecture discourse is prioritising economic value over social obligation of cross-subsidisation.}
}
@article{YANG2021105971,

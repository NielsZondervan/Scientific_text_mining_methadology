author = {Katarzyna Sosik and Magdalena Turzeniecka and Stanisław Iwan},
keywords = {cargo distribution, urban logistics, supply chain, forwarder, transport},
abstract = {Distribution processes are major links in logistics chains. However, there are many hindrances to those processes, and quick elimination of those difficulties is essential for the process effectiveness. In this context, invaluable help is provided by IT tools such as freight exchange platforms, integrated management systems (ERP, CRM), fleet management systems, etc., as their application makes it possible to mitigate many hindrances. Apart from that, forwarders play a significant role in efficient coordination of deliveries. These aspects become particularly important when such processes take place within urban areas. The specific nature of distribution processes implementation in cities is determined by both the complexity of transport networks and considerable interactions with other users of the road infrastructure, as well as the environmental and social aspects. This article aims to presenting the role of carriers in elimination of hindrances, in order to ensure efficient implementation of distribution processes in cities. To ensure the efficient functioning of the logistics chain it is necessary to identify any restrictions affecting the execution of transport and forwarding orders.}
}
@article{GAUDRON201975,
title = {Interactive Simulation To Explore Urban Distribution Schemes},
journal = {Transportation Research Procedia},
volume = {37},
pages = {75-82},

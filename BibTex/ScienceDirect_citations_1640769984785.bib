@article{KAWASE201931,
title = {Optimal Control Strategy for Relief Supply Considering Information and Demand Uncertainty after a Major Disaster⁎⁎This study was supported by JSPS Grant-in-aid (KAKENHI) #16H02368.},
journal = {IFAC-PapersOnLine},

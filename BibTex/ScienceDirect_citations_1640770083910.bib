url = {https://www.sciencedirect.com/science/article/pii/S0377221719302516},
author = {Teun {van Gils} and An Caris and Katrien Ramaekers and Kris Braekers},
keywords = {Logistics, Metaheuristic, Order batching, Order picking, Routing},
abstract = {New market developments increase the complexity of managing order picking operations. Integrating order picking planning problems enables warehouse managers to organize order picking operations more efficiently. This paper provides a decision support tool that integrates and solves the three main operational order picking planning problems (i.e., order batching, picker routing, and picker scheduling). Different from other studies, the objective is to increase order picking efficiency while ensuring a high customer service level. The new integrated planning problem accounts for order due times, a limited availability of order pickers, as well as a high-level storage locations, to ensure the applicability in practice. An iterated local search algorithm is introduced to solve the problem effectively and efficiently. Moreover, a real-life case shows the substantial performance benefits gained from integrating batching, routing, and picker scheduling.}
}
@article{GIAT2021107462,
title = {Allocation of scarce resources in a network with periodic deliveries and customer tolerable wait},
journal = {Computers & Industrial Engineering},
volume = {159},
pages = {107462},
year = {2021},
issn = {0360-8352},
doi = {https://doi.org/10.1016/j.cie.2021.107462},
url = {https://www.sciencedirect.com/science/article/pii/S0360835221003661},
author = {Yahel Giat},
keywords = {Inventory, Logistics, Spares allocation problem, Tolerable wait, Window fill rate, Equitability},
abstract = {We consider the stocking problem of an inventory system in which orders are issued continuously in time, whereas the delivery of orders is done only periodically. This setting is particularly relevant in remote regions with available communication infrastructure but limited transportation access. We develop an exact formula for the window fill rate of a single location, that is, the probability that a customer waits less than their tolerable wait. Simplified formulas for special cases (zero lead time, zero tolerable wait and continuous delivery) are derived and characterized. The window fill rate in the multiple location model is either the minimum of the individual locations’ window fill rates or the weighted average of these window fill rates. The former definition ensures equitability, whereas the latter promotes overall efficiency. Our analysis demonstrates that when resources are scarce, the policies underlying these definitions result in dramatically different allocations and performances.}
}
@article{SCHWERDFEGER20201077,
